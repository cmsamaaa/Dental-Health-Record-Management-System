<%- include('../includes/head.ejs') %>
<!-- Custom Input Date -->
<link rel="stylesheet" href="/css/custom-input-date.css">
</head>

<body class="hold-transition sidebar-mini">
  <div class="wrapper">
    <!-- Navbar -->
    <%- include('../includes/navbar.ejs') %>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <%- include('../includes/sidebar.ejs') %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <%- include('../includes/content-header.ejs') %>

      <% let actionText = path.split('/')[3] %>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <!-- Error Message -->
              <%- include('../includes/flash-message.ejs') %>

              <!-- general form elements -->
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title"><%= actionText %> Inventory Inbound Form</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="<%= path %>" method="post">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group">
                          <label for="tb_itemName">Item Name<span style="color:red;">*</span></label>
                          <input type="text" class="form-control" id="tb_itemName" name="itemName" pattern="[a-zA-Z\s]+" title="E.g Antibiotics" placeholder="Antibiotics" required>
                        </div>
                        <div class="form-group">
                          <label for="tb_expiry">Expiry Date</label>
                          <input type="date" class="form-control" id="tb_expiry" min="<%= new Date().toISOString().split('T')[0] %>" name="expiry" placeholder="dd/mm/yyyy">
                        </div>
                        <div class="form-group">
                          <label for="tb_sku">SKU<span style="color:red;">*</span></label>
                          <input type="text" class="form-control" id="tb_sku" name="SKU" pattern="[a-zA-Z0-9\s]+" title="Alphanumeric only! Eg. FYP123456HD" placeholder="FYP123456HD" required>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="row">
                          <div class="col-md-6">
                            <div class="form-group">
                              <label for="tb_Quantity">Quantity<span style="color:red;">*</span></label>
                              <input type="number" class="form-control" id="tb_Quantity" name="quantity" min="1" placeholder="100" required>
                            </div>
                          </div>
                          <div class="col-md-6">
                            <div class="form-group">
                              <label for="tb_cost">Cost per Unit ($)<span style="color:red;">*</span></label>
                              <input type="number" class="form-control" step="0.01" id="tb_cost" name="cost" min="1" placeholder="1.99" required>
                            </div>
                          </div>
                        </div>
                        <div class="form-group">
                          <label for="tb_inbound">Inbound Date<span style="color:red;">*</span></label>
                          <input type="date" class="form-control" min="<%= new Date().toISOString().split('T')[0] %>" id="tb_inbound" name="inbound" placeholder="dd/mm/yyyy" required>
                        </div>
                        <div class="form-group">
                          <label for="tb_upc">UPC<span style="color:red;">*</span></label>
                          <input type="text" class="form-control" id="tb_upc" name="UPC" pattern="[0-9]{12}" title="12 digits only! Eg. 123456789012" placeholder="123456789012" required>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label for="tb_note">Note</label>
                          <textarea class="form-control" id="tb_note" name="note" placeholder="Additional notes" rows="4"></textarea>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- /.card-body -->

                  <div class="card-footer text-right">
                    <button type="reset" class="btn btn-outline-danger mr-1">Clear</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div>
              <!-- /.card -->
            </div>
          </div>
          <!-- /.row -->
        </div><!-- /.container-fluid -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- End -->
    <%- include('../includes/footer.ejs') %>
  </div>
  <!-- ./wrapper -->

  <!-- REQUIRED SCRIPTS -->
  <%- include('../includes/end-scripts.ejs') %>

  <!-- AdminLTE for demo purposes -->
  <script src="/dist/js/demo.js"></script>
</body>

</html>