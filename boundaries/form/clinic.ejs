<%- include('../includes/head.ejs') %>
<!-- Custom Input Date -->
<link rel="stylesheet" href="/css/custom-input-date.css">
</head>

<body class="hold-transition sidebar-mini">
  <div class="wrapper">
    <!-- Navbar -->
    <%- include('../includes/navbar.ejs') %>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <%- include('../includes/sidebar.ejs') %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <%- include('../includes/content-header.ejs') %>

      <% let actionText = path === '/admin/patient/create' ? 'create' : 'edit' %>

      <!-- Main content -->
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <!-- Flash Message -->
              <%- include('../includes/flash-message.ejs') %>

              <!-- general form elements -->
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title text-capitalize">Clinic Information</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="<%= path %>" method="post">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group">
                          <label for="tb_ClinicInfo">Clinic ID<span style="color:red;">*</span></label>
                          <input type="text" class="form-control" id="tb_ClinicInfo" name="clinicId" tabindex="1" value="<%= clinicData.clinicId %>" readonly>
                        </div>
                        <div class="form-group">
                          <label for="tb_Email">Email Address<span style="color:red;">*</span></label>
                          <input type="email" class="form-control" id="tb_Email" name="email" tabindex="5" value="<%= clinicData.email %>" required>
                        </div>
                        <div class="form-group">
                          <label for="tb_Phone">Phone<span style="color:red;">*</span></label>
                          <input type="text" class="form-control" id="tb_Phone" name="phone" tabindex="3" value="<%= clinicData.phone %>" required>
                        </div>
                        <div class="form-group">
                          <label for="tb_Address">Address<span style="color:red;">*</span></label>
                          <input type="text" class="form-control" id="tb_Address" name="address" tabindex="9" value="<%= clinicData.address %>" required>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group">
                          <label for="tb_Name">Name<span style="color:red;">*</span></label>
                          <input type="text" class="form-control" id="tb_Name" name="name" tabindex="2" value="<%= clinicData.name %>" required>
                        </div>
                        <div class="form-group">
                          <label for="tb_SubEmail">Email Address (Secondary)</label>
                          <input type="email" class="form-control" id="tb_SubEmail" name="subEmail" tabindex="3" value="<%= clinicData.subEmail %>">
                        </div>
                        <div class="form-group">
                          <label for="tb_SubPhone">Phone (Secondary)</label>
                          <input type="text" class="form-control" id="tb_SubPhone" name="subPhone" tabindex="3" value="<%= clinicData.subPhone %>">
                        </div>
                        <div class="row">
                          <div class="col-md-6">
                            <div class="form-group">
                              <label for="tb_Postal">Postal<span style="color:red;">*</span></label>
                              <input type="text" class="form-control" id="tb_Postal" name="postal" tabindex="10" value="<%= clinicData.postal %>" required>
                            </div>
                          </div>
                          <div class="col-md-6">
                            <div class="form-group">
                              <label for="tb_Unit">Unit Number<span style="color:red;">*</span></label>
                              <input type="text" class="form-control" id="tb_Unit" name="unit" tabindex="11" value="<%= clinicData.unit %>" required>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- /.card-body -->

                  <div class="card-footer text-right">
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </form>
              </div>
              <!-- /.card -->
            </div>
          </div>
          <!-- /.row -->
        </div><!-- /.container-fluid -->
      </section>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- End -->
    <%- include('../includes/footer.ejs') %>
  </div>
  <!-- ./wrapper -->

  <!-- disabled SCRIPTS -->
  <%- include('../includes/end-scripts.ejs') %>

  <!-- bs-custom-file-input -->
  <script src="/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
  <!-- AdminLTE for demo purposes -->
  <script src="/dist/js/demo.js"></script>
  <!-- Page specific script -->
  <script>
    $(function() {
      bsCustomFileInput.init();
    });
  </script>
</body>

</html>