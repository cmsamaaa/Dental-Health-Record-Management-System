<%- include('../includes/head.ejs') %>
</head>

<body class="hold-transition login-page">
  <!-- Navbar -->
  <%- include('../includes/preloader.ejs') %>
  <!-- /.navbar -->
  <div class="login-box">
    <%- include('login-logo.ejs') %>
    <!-- /.login-logo -->
    <div class="card">
      <div class="card-body login-card-body">
        <% if (query.error === 'true') { %>
        <p class="login-box-msg text-danger">
          Duplicate NRIC and/or email found.
        </p>
        <% } else if (query.type === 'success') { %>
        <p class="login-box-msg text-success">Register successfully! Please login with your email and NRIC.</p>
        <% } else { %>
        <p class="login-box-msg">
          Register your account
        </p>
        <% } %>

        <form action="<%= path %>" method="post">
          <div class="col mb-3">
            <div class="form-group">
              <input type="text" class="form-control" id="tb_lastName" name="firstName" name="firstName" pattern="[a-zA-Z\s]+" title="E.g James Cameron" placeholder="Enter first name" tabindex="1" required>
            </div>
          </div>
          <div class="col mb-3">
            <div class="form-group">
              <input type="text" class="form-control" id="tb_lastName" name="lastName" pattern="[a-zA-Z\s]+" title="E.g Tan" tabindex="2" placeholder="Enter last name" required>
            </div>
          </div>
          <div class="col mb-3">
            <div class="form-group">
              <input type="text" class="form-control" id="tb_nric" name="nric" pattern="^[STFG]\d{7}[A-Z]$" title="E.g S1234567Z" placeholder="E.g S1234567Z" tabindex="3" required>
            </div>
          </div>
          <div class="col mb-3">
            <div class="form-group">
              <input type="date" class="form-control" id="tb_DOB" name="DOB" min="1922-01-01" max="<%= new Date().toISOString().split('T')[0] %>" tabindex="4" placeholder="dd/mm/yyyy" required>
            </div>
          </div>
          <div class="col mb-3">
            <div class="form-group">
              <select class="form-control" id="ddl_Gender" name="gender" style="width: 100%;" tabindex="6" required>
                <option disabled selected>Select Your Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
              </select>
            </div>
          </div>
          <div class="col mb-3">
            <div class="form-group">
              <input type="email" class="form-control" id="tb_Email" name="email" title="E.g abc@xyz.com" placeholder="E.g abc@xyz.com" tabindex="5" required>
            </div>
          </div>
          <div class="col mb-3">
            <div class="form-group">
              <input type="text" class="form-control" id="tb_Address" name="address" tabindex="9" placeholder="Enter home address" required>
            </div>
          </div>
          <div class="col mb-3">
            <div class="form-group">
              <input type="text" class="form-control" id="tb_Postal" name="postal" pattern="\b[0-9]{6}\b" title="E.g 543210" tabindex="10" placeholder="E.g 543210" required>
            </div>
          </div>
          <div class="col mb-3">
            <div class="form-group">
              <input type="text" class="form-control" id="tb_Unit" name="unit" tabindex="11" placeholder="E.g 01-01" required>
            </div>
          </div>

          <div class="row">
            <div class="col-8">
              <div class="icheck-primary">
                <input type="checkbox" id="remember">
                <label for="remember">
                  I agree to the terms
                </label>
              </div>
            </div>
            <!-- /.col -->
            <div class="col-4">
              <button type="submit" class="btn btn-primary btn-block" href="/">Register</button>
            </div>
            <!-- /.col -->
          </div>
        </form>

        <p class="mb-1">
          <a href="/login">I already have an account</a>
        </p>
      </div>
      <!-- /.login-card-body -->
    </div>
  </div>
  <!-- /.login-box -->

  <!-- REQUIRED SCRIPTS -->
  <%- include('../includes/end-scripts.ejs') %>

</body>

</html>