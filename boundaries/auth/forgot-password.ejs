<%- include('../includes/head.ejs') %>
</head>

<body class="hold-transition login-page">
  <!-- Navbar -->
  <%- include('../includes/preloader.ejs') %>
  <!-- /.navbar -->
  <div class="login-box">
    <%- include('login-logo.ejs') %>
    <!-- /.login-logo -->
    <div class="card">
      <div class="card-body login-card-body">
        <% if (query.reset === 'success') { %>
        <p class="login-box-msg text-success">Password has been reset. Kindly follow the instructions sent to your email.</p>
        <% } else if (query.reset === 'error') { %>
        <% if (query.type === 'email') { %>
        <p class="login-box-msg text-danger">This email does not exist in our system.</p>
        <% } else if (query.type === 'service') { %>
        <p class="login-box-msg text-danger">Our mailing service is down at the moment, please try again later.</p>
        <% } %>
        <% } else { %>
        <p class="login-box-msg">You forgot your password?</p>
        <% } %>

        <form action="<%= path %>" method="post">
          <div class="input-group mb-3">
            <input type="email" name="email" class="form-control" placeholder="Email" required>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <button type="submit" class="btn btn-primary btn-block">Request new password</button>
            </div>
            <!-- /.col -->
          </div>
        </form>

        <p class="mt-3 mb-1">
          <a href="/login">Back to Login</a>
        </p>
      </div>
      <!-- /.login-card-body -->
    </div>
  </div>
  <!-- /.login-box -->

  <!-- REQUIRED SCRIPTS -->
  <%- include('../includes/end-scripts.ejs') %>

</body>

</html>