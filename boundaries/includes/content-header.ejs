<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1><%= pageTitle %></h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <% const arrPath = path.replaceAll('-', ' ').split('/') %>
          <% for(let i = 1; i < arrPath.length - 1; i++) { %>
          <li class="breadcrumb-item text-capitalize"><a href="#"><%= arrPath[i] %></a></li>
          <% } %>
          <li class="breadcrumb-item text-capitalize active">
            <%= arrPath[arrPath.length - 1] %>
          </li>
        </ol>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>