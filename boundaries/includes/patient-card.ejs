<% if (path === '/dentist/appointment/in-session') { %>
<div class="row">
  <div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary collapsed-card">
      <div class="card-header">
        <h3 class="card-title">Appointment Summary</h3>
        <div class="card-tools">
          <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-plus"></i>
          </button>
        </div>
        <!-- /.card-tools -->
      </div>
      <!-- /.card-header -->
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="tb_firstName">First Name:</label>
              <input type="text" class="form-control-plaintext" id="tb_firstName" name="firstName" tabindex="1" value="<%= appointmentData.firstName %>" disabled>
            </div>
            <div class="form-group">
              <label for="tb_NRIC">Patient's NRIC:</label>
              <input type="text" class="form-control-plaintext" id="tb_NRIC" name="nric" tabindex="3" value="<%= appointmentData.nric %>" disabled>
            </div>
            <div class="form-group">
              <label for="tb_Dentist">Dentist:</label>
              <input type="text" class="form-control-plaintext" id="tb_Dentist" name="name" tabindex="5" value="Dr. <%= dentistData.firstName + ' ' + dentistData.lastName %>" disabled>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="tb_lastName">Last Name (Surname):</label>
              <input type="text" class="form-control-plaintext" id="tb_lastName" name="lastName" tabindex="2" value="<%= appointmentData.lastName %>" disabled>
            </div>
            <div class="form-group">
              <label for="tb_ClinicName">Clinic Name:</label>
              <input type="text" class="form-control-plaintext" id="tb_ClinicName" name="clinicName" tabindex="4" value="<%= dentistData.clinicName %>" disabled>
            </div>
            <div class="form-group">
              <label for="tb_ApptDateTime">Appointment Date & Time:</label>
              <input type="text" class="form-control-plaintext" id="tb_ApptDateTime" name="startDateTime" tabindex="6" value="<%= appointmentData.startDateTime %>" disabled>
            </div>
          </div>
        </div>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>
</div>
<!-- /.row -->
<% } %>

<div class="row">
  <div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary collapsed-card">
      <div class="card-header">
        <h3 class="card-title text-capitalize">Full Patient Details</h3>
        <div class="card-tools">
          <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-plus"></i>
          </button>
        </div>
        <!-- /.card-tools -->
      </div>
      <!-- /.card-header -->
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="tb_lastName">First Name:</label>
              <input type="text" class="form-control-plaintext" id="tb_lastName" pattern="[a-zA-Z\s]+" title="E.g James Cameron" name="firstName" tabindex="1" value="<%= userData.firstName %>" disabled>
            </div>
            <div class="form-group">
              <label for="tb_nric">NRIC:</label>
              <input type="text" class="form-control-plaintext" id="tb_nric" name="nric" pattern="^[STFG]\d{7}[A-Z]$" title="E.g S1234567Z" tabindex="3" value="<%= userData.nric %>" disabled>
            </div>
            <div class="form-group">
              <label for="tb_Email">Email Address:</label>
              <input type="email" class="form-control-plaintext" id="tb_Email" name="email" tabindex="5" value="<%= userData.email %>" disabled>
            </div>
            <div class="form-group">
              <label for="tb_medicareID">Medicare ID</label>
              <input type="text" class="form-control-plaintext" id="tb_medicareID" name="medicareId" tabindex="7" value="<%= userData.medicareId ? userData.medicareId : 'Not Applicable' %>" disabled>
            </div>
            <div class="form-group">
              <label for="tb_Address">Home Address:</label>
              <input type="text" class="form-control-plaintext" id="tb_Address" name="address" tabindex="9" value="<%= userData.address %>" disabled>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="tb_lastName">Last Name (Surname):</label>
              <input type="text" class="form-control-plaintext" id="tb_lastName" name="lastName" pattern="[a-zA-Z\s]+" title="E.g Tan" tabindex="2" value="<%= userData.lastName %>" disabled>
            </div>
            <div class="form-group">
              <label for="tb_DOB">Birthday:</label>
              <input type="date" class="form-control-plaintext" id="tb_DOB" name="DOB" min="1922-01-01" max="<%= new Date().toISOString().split('T')[0] %>" tabindex="4" value="<%= userData.DOB %>" disabled>
            </div>
            <div class="form-group">
              <label for="tb_Gender">Gender:</label>
              <input type="text" class="form-control-plaintext" id="tb_Gender" name="lastName" tabindex="6" value="<%= userData.gender %>" disabled>
            </div>
            <div class="form-group">
              <label for="tb_FamilyID">Family Group ID</label>
              <input type="text" class="form-control-plaintext" id="tb_FamilyID" name="familyId" tabindex="8" value="<%= userData.familyId ? userData.familyId : 'Not Applicable' %>" disabled>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="tb_Postal">Postal:</label>
                  <input type="text" class="form-control-plaintext" id="tb_Postal" name="postal" pattern="\b[0-9]{6}\b" title="E.g 543210" tabindex="10" value="<%= userData.postal %>" disabled>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <label for="tb_Postal">Unit Number:</label>
                  <input type="text" class="form-control-plaintext" id="tb_Postal" name="unit" tabindex="11" value="<%= userData.unit %>" disabled>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>
</div>
<!-- /.row -->

<% if (userData.status !== 'Upcoming' && userData.status !== 'Missed' && userData.status !== 'Cancelled') { %>
<div class="row">
  <div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary">
      <div class="card-header">
        <h3 class="card-title text-capitalize">Oral Health Record</h3>
        <div class="card-tools">
          <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i>
          </button>
        </div>
        <!-- /.card-tools -->
      </div>
      <!-- /.card-header -->
      <div class="card-body">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="tb_recordTeeth">Tooth(s) Recorded</label>
              <% if (oralrecordData) {  %>
              <input type="text" class="form-control-plaintext" name="recordTeeth" value="<%= oralrecordData.recordTeeth ? oralrecordData.recordTeeth : 'Not recorded' %>" disabled>
              <% } else {  %>
              <input type="text" class="form-control-plaintext" name="recordTeeth" value="Not recorded" disabled>
              <% } %>
            </div>
            <div class="form-group">
              <label for="tb_TeethDesc">Teeth Description</label>
              <% if (oralrecordData) {  %>
              <textarea class="form-control-plaintext" name="recordDescription" disabled><%= oralrecordData.recordDescription ? oralrecordData.recordDescription : 'Not recorded' %></textarea>
              <% } else {  %>
              <textarea class="form-control-plaintext" name="recordDescription" disabled>Not recorded</textarea>
              <% } %>
            </div>
            <div class="form-group">
              <label for="tb_CreatedAt">Created At</label>
              <% if (oralrecordData) {  %>
              <input type="text" class="form-control-plaintext" name="recordCreatedAt" value="<%= oralrecordData.recordCreatedAt ? oralrecordData.recordCreatedAt : 'Not recorded' %>" disabled>
              <% } else {  %>
              <input type="text" class="form-control-plaintext" name="recordCreatedAt" value="Not recorded" disabled>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <% if (path === '/dentist/appointment/in-session') { %>
      <div class="card-footer text-right">
        <a href="/dentist/oral-record/view-all/<%= userData.patientId %>" class="btn btn-success mr-2" target="_blank">View Past Records</a>
        <% if (oralrecordData) {  %>
        <a href="/dentist/oral-record/edit/<%= oralrecordData.recordId %>" class="btn btn-primary">Edit Record</a>
        <% } else {  %>
        <input type="hidden" name="patientId" value="<%= userData.patientId %>">
        <input type="hidden" name="apptId" value="<%= userData.apptId %>">
        <a href="/dentist/oral-record/create/<%= userData.apptId %>" class="btn btn-primary">Create Record</a>
        <% } %>
      </div>
      <% } %>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>
</div>
<!-- /.row -->
<% } %>

