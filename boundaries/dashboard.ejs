<%- include('includes/head.ejs') %>
</head>
<!--
`body` tag options:

  Apply one or more of the following classes to to the body tag
  to get the desired effect

  * sidebar-collapse
  * sidebar-mini
-->

<body class="hold-transition sidebar-mini">
  <div class="wrapper">
    <!-- Navbar -->
    <%- include('includes/navbar.ejs') %>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <%- include('includes/sidebar.ejs') %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <%- include('includes/content-header.ejs') %>

      <!-- Main content -->
      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-3 col-6">
              <!-- small card -->
              <div class="small-box bg-info">
                <div class="inner">
                  <h3><%= queueData %></h3>
                  <p>
                    <% if (queueData > 1) { %>
                    Customers In Queue
                    <% } else { %>
                    Customer In Queue
                    <% } %>
                  </p>
                </div>
                <div class="icon">
                  <i class="fas fa-users"></i>
                </div>
                <a href="/admin/queue/view-all" class="small-box-footer">
                  More info <i class="fas fa-arrow-circle-right"></i>
                </a>
              </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
              <!-- small card -->
              <div class="small-box bg-success">
                <div class="inner">
                  <h3>S$<%= Number(grossIncome).toLocaleString() %></h3>

                  <p>
                    Gross Income (<span id="lbl_Month"></span>)
                  </p>
                </div>
                <div class="icon">
                  <i class="fas fa-chart-line"></i>
                </div>
                <a href="/admin/bill/view-all?filter=paid" class="small-box-footer">
                  More info <i class="fas fa-arrow-circle-right"></i>
                </a>
              </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
              <!-- small card -->
              <div class="small-box bg-warning">
                <div class="inner">
                  <h3><%= lowStock %></h3>

                  <p>Low Stocks</p>
                </div>
                <div class="icon">
                  <i class="fas fa-boxes"></i>
                </div>
                <a href="/admin/inventory/view-all" class="small-box-footer">
                  More info <i class="fas fa-arrow-circle-right"></i>
                </a>
              </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
              <!-- small card -->
              <div class="small-box bg-danger">
                <div class="inner">
                  <h3><%= unpaidInvoices %></h3>

                  <p>Invoices Due</p>
                </div>
                <div class="icon">
                  <i class="fas fa-file-invoice-dollar"></i>
                </div>
                <a href="/admin/bill/view-all?filter=unpaid" class="small-box-footer">
                  More info <i class="fas fa-arrow-circle-right"></i>
                </a>
              </div>
            </div>
            <!-- ./col -->
          </div>
          <!-- /.row -->

          <div class="row">
            <% if (appointmentData.length > 0) { %>
            <div class="col-lg-6">
              <div class="card">
                <div class="card-header border-0">
                  <div class="d-flex justify-content-between">
                    <h3 class="card-title">Appointments Today</h3>
                    <a href="/admin/appointment/view-all?filter=upcoming">View All</a>
                  </div>
                </div>
                <div class="card-body table-responsive p-0">
                  <table class="table table-striped table-valign-middle">
                    <thead>
                      <tr>
                        <th>Patient</th>
                        <th>NRIC</th>
                        <th>Date & Time</th>
                        <th>Status</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for (let i = 0; i < appointmentData.length; i++) { %>
                      <tr>
                        <td>
                          <% if (appointmentData[i].gender === 'Male') { %>
                          Mr.
                          <% } %>
                          <% if (appointmentData[i].gender === 'Female') { %>
                          Ms.
                          <% } %>
                          <%= appointmentData[i].firstName + ' ' + appointmentData[i].lastName %>
                        </td>
                        <td><%= appointmentData[i].nric %></td>
                        <td><%= appointmentData[i].startDateTime %></td>
                        <td><%= appointmentData[i].status %></td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
              <!-- /.card -->
            </div>
            <!-- /.col-md-6 -->
            <% } %>

            <% if (treatmentData.length > 0) { %>
            <div class="col-lg-6">
              <div class="card">
                <div class="card-header border-0">
                  <div class="d-flex justify-content-between">
                    <h3 class="card-title">Top Treatments</h3>
                    <a href="/admin/treatment/view-all">Manage</a>
                  </div>
                </div>
                <div class="card-body table-responsive p-0">
                  <table class="table table-striped table-valign-middle">
                    <thead>
                      <tr>
                        <th>Treatment</th>
                        <th>Price (S$)</th>
                        <th>Occurrences</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for (let i = 0; i < treatmentData.length; i++) { %>
                      <tr>
                        <td>
                          <%= treatmentData[i].treatmentName %>
                          <% if (i === 0 || i === 1) { %>
                          <span class="badge bg-danger ml-1">HOT</span>
                          <% } %>
                        </td>
                        <td><%= treatmentData[i].treatmentPrice %></td>
                        <td><%= treatmentData[i].occurrence %></td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
              <!-- /.card -->
            </div>
            <!-- /.col-md-6 -->
            <% } %>
          </div>
          <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- End -->
    <%- include('includes/footer.ejs') %>
  </div>
  <!-- ./wrapper -->

  <!-- REQUIRED SCRIPTS -->
  <%- include('includes/end-scripts.ejs') %>

  <!-- OPTIONAL SCRIPTS -->
  <script src="../plugins/chart.js/Chart.min.js"></script>
  <script src="/plugins/moment/moment.min.js"></script>
  <!-- AdminLTE for demo purposes -->
  <script src="../dist/js/demo.js"></script>
  <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
  <script src="../dist/js/pages/dashboard3.js"></script>

  <script>
    $(function() {
      $('#lbl_Month').text(moment(new Date()).format('MMMM'));
    });
  </script>

</body>

</html>